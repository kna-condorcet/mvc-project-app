@model ProjectIndexViewModel

@{
    ViewData["Title"] = "Projects";
}

<div class="text-center">
    <h1 class="display-4">Projects</h1>
    <table class="table">
        <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Projects[0].Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Projects[0].Deadline)
            </th>
        </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Projects)
            {
                <tr>
                    <td>
                        @item.Name
                    </td>
                    <td>
                        @item.Deadline?.ToString("d")
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

